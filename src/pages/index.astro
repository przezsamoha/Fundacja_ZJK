        </header>

        <hr />

        <Data key="KRS">
          <span class="data-value">0000348267</span>
        </Data>

        <Data key="NIP">
          <span class="data-value">9522083030</span>
        </Data>

        <Data key="REGON">
          <span class="data-value">142295229</span>
        </Data>

        <Data key="Adres">
          <p class="data-value">
            al. Piłsudskiego 17/4, 35-074 Rzeszów, Polska
          </p>
        </Data>

        <Data key="Numer Rachunku Bankowego">
          <br />
          <br />
          <div>
            <p class="data-value">
              BNP Paribas Polska <br />54 2030 0045 1110 0000 0251 3470
            </p>
          </div>
        </Data>
      </section>

      <section class="foundation-contact">
        <header>
          <h2 class="hr-title">Kontakt</h2>
        </header>
        <hr />

        <Data key=" Prezes Zarządu Fundacji">
          <p class="data-value">&nbspPaweł Bietkowski</p>
        </Data>

        <a href="mailto:p.bietkowski@gmail.com" class="mail-container"
          ><span class="fa-regular fa-envelope"></span>p.bietkowski@gmail.com</a
        >
      </section>
    </main>
  </body>
</html>
